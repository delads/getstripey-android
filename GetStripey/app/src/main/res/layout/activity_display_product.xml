<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.delads.getstripey.DisplayProductActivity"
    android:layout_gravity="center_horizontal"
    android:scrollbars="none"
    android:background="@color/bt_white">

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/bt_white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:textColor="#528b8b"
        android:id="@+id/textViewPrice"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:paddingTop="30px"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/textViewName"
        android:layout_below="@+id/textViewPrice"
        android:layout_centerHorizontal="true"
        android:paddingTop="30px"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#424242"
        android:text="Large Text"
        android:id="@+id/textViewSummary"
        android:layout_below="@+id/textViewName"
        android:layout_centerHorizontal="true"
        android:paddingTop="30px"/>


    <Button
        android:text="Buy with Stripe"
        android:textColor="#FFFFFF"
        android:textSize="15sp"

        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:id="@+id/stripe_buy_button"
        android:layout_below="@+id/textViewSummary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"/>


    <Button
        android:text="Buy with Braintree"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:onClick="onBraintreeSubmit"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:id="@+id/braintree_buy_button"
        android:layout_below="@+id/stripe_buy_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <Button
        android:text="Buy with Payworks"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:onClick="onPayworksSubmit"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:id="@+id/payworks_buy_button"
        android:layout_below="@+id/braintree_buy_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    </RelativeLayout>

</ScrollView>


